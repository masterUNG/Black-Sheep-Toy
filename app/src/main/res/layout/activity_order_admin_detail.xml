<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kmutnb.ratchaphol.natthawut.natdanai.blacksheeptoy.OrderDetail"
    android:background="@drawable/bgblue">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Detail"
                android:id="@+id/textView39"
                android:textSize="@dimen/h1"
                android:textColor="@color/colorblack" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date :"
                android:id="@+id/textView41"
                android:textSize="@dimen/h2"
                android:layout_margin="2dp"
                android:textColor="@color/colorblack" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textView42"
                android:textSize="@dimen/h2"
                android:layout_margin="2dp"
                android:textColor="@color/colorblack" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order No."
                android:id="@+id/textView43"
                android:textSize="@dimen/h2"
                android:layout_margin="2dp"
                android:textColor="@color/colorblack" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textView44"
                android:textSize="@dimen/h2"
                android:layout_margin="2dp"
                android:textColor="@color/colorblack" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name :"
                android:id="@+id/textView40"
                android:textSize="@dimen/h2"
                android:layout_margin="2dp"
                android:textColor="@color/colorblack" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textView45"
                android:textSize="@dimen/h2"
                android:layout_margin="2dp"
                android:textColor="@color/colorblack" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textView46"
                android:textSize="@dimen/h2"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"
                android:textColor="@color/colorblack" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address :"
            android:id="@+id/textView47"
            android:textSize="@dimen/h2"
            android:textColor="@color/colorblack" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/scrollView3" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textView48"
                android:textSize="@dimen/h2"
                android:textColor="@color/colorblack" />
        </ScrollView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status :"
                android:id="@+id/textView63"
                android:layout_margin="2dp"
                android:textSize="@dimen/h2"
                android:textColor="@color/colorblack" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textView64"
                android:layout_margin="2dp"
                android:textSize="@dimen/h2"
                android:textColor="@color/colorblack" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total: "
                android:id="@+id/textView53"
                android:textColor="@color/colorblack"
                android:textSize="@dimen/h2"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textView54"
                android:textSize="@dimen/h2"
                android:layout_margin="2dp"
                android:textColor="@color/colorblack" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="#e2090808">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="สินค้า"
                android:id="@+id/textView49"
                android:textSize="@dimen/h2"
                android:textStyle="bold"
                android:textColor="#fbf9f9" />
        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="142dp"
            android:id="@+id/listView4"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="70dp"
            android:layout_weight="0.27" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Order"
        android:id="@+id/button24"
        android:layout_marginBottom="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:textColor="@color/colorblack"
        android:textStyle="bold"
        android:textSize="@dimen/h2"
        android:background="#d8ff0000"
        android:onClick="clickDeleteOrder" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:id="@+id/button13"
            android:layout_alignParentBottom="true"
            android:background="#000000"
            android:textColor="#ffffff"
            android:textSize="@dimen/h3"
            android:textStyle="bold"
            android:layout_weight="1"
            android:onClick="clickOK" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:id="@+id/button19"
            android:layout_weight="1"
            android:background="#ffffff"
            android:textStyle="bold"
            android:onClick="clickUpdate" />
    </LinearLayout>

</RelativeLayout>

