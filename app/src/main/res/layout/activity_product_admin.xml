<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kmutnb.ratchaphol.natthawut.natdanai.blacksheeptoy.product_admin"
    android:background="@drawable/bgblue">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button15"
        android:layout_weight="1"
        android:nestedScrollingEnabled="false"
        android:background="#fbfafa"
        android:longClickable="false"
        android:text="update"
        android:textStyle="bold"
        android:textColor="#060606"
        android:textSize="@dimen/h1"
        android:layout_marginTop="151dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="clickUpdate" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button16"
        android:layout_weight="1"
        android:nestedScrollingEnabled="false"
        android:background="#fefefe"
        android:longClickable="false"
        android:text="insert"
        android:textStyle="bold"
        android:textColor="#050505"
        android:textSize="@dimen/h1"
        android:layout_marginTop="85dp"
        android:layout_below="@+id/button15"
        android:layout_centerHorizontal="true"
        android:onClick="clickInsertProduct" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="back"
        android:id="@+id/button17"
        android:background="#030303"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_weight="3"
        android:textSize="@dimen/h2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="clickBackProduct" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product"
        android:id="@+id/textView52"
        android:textColor="@color/colorblack"
        android:textStyle="bold"
        android:textSize="@dimen/h1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
