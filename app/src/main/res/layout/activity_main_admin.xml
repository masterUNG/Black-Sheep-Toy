<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kmutnb.ratchaphol.natthawut.natdanai.blacksheeptoy.Main_Admin"
    android:background="@drawable/bgblue"
    android:clickable="false">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button10"
        android:layout_weight="1"
        android:nestedScrollingEnabled="false"
        android:background="#030303"
        android:longClickable="false"
        android:text="Product"
        android:onClick="clickProduct"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="@dimen/h1"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button11"
        android:layout_weight="1"
        android:nestedScrollingEnabled="false"
        android:background="#030303"
        android:longClickable="false"
        android:text="User"
        android:onClick="clickUser"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="@dimen/h1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="98dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button13"
        android:layout_weight="1"
        android:nestedScrollingEnabled="false"
        android:background="#030303"
        android:longClickable="false"
        android:text="Order"
        android:onClick="clickOrder"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="@dimen/h1"
        android:layout_below="@+id/button10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="96dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Management"
        android:id="@+id/textView51"
        android:textColor="@color/colorblack"
        android:textStyle="bold"
        android:textSize="@dimen/h1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
